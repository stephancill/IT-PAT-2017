unit Utilities_U;

interface

uses DB, ADODB;

type
  Utilities = Class Abstract
    private

    public
      function queryDatabase(query: string; readonly: boolean): TADOQuery;
  end;
implementation

uses Data_Module_U;

{ Utilities }

function Utilities.queryDatabase(query: string; readonly: boolean): TADOQuery;
begin
  data_module.qry.Close;
  data_module.qry.SQL.Clear;
  data_module.qry.SQL.Add(query);

  if readonly then
  begin
    data_module.qry.Open;
  end;


  result := data_module.qry;
end;



end.
